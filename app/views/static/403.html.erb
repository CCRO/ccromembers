<div id="access-forbidden" class="new">
	<div class="offset1">
		<table>
			<tr>
        <td valign="top"><%= image_tag "ccro_short.png", :width => 250, :id => 'logo_short' %></td>
		<td valign="top" class="span5">
      		<h2>Access Forbidden</h2>
      		<br />
			<div id="notices">
				<% flash.each do |key, msg| %>
  				<div id="notice_<%= key %>" class="alert alert-block alert-<%= key %> fade in span10">
            <h4 class="alert-heading"><%=  key.to_s.capitalize %></h4>
            <p><%= msg %></p>
            <p>
             <%= link_to 'Go to home', root_path, :class =>'btn btn-danger' %>  <%= link_to 'Try again', :back, :class =>'btn' %>
            </p>
          </div>
				<% end %>
			</div>
			
        </td>
      </tr>
    </table>
	</div>
</div>