<% if current_user.admin? %>
	<h1>Documents</h1>
	<table class="table table-striped table-bordered">
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Owner</th>
	      <th>Last Updated</th>
	      <th>Actions</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @documents.each do |document| %>
	      <tr>
	        <td><%= link_to document.title, document_path(document) %> <em>v<%= document.versions.length %></em></td>
	        <td><%= document.owner.name %>
				<td>about <%= time_ago_in_words document.updated_at %> ago <%= "by " + Person.find(document.versions.last.whodunnit.to_i).name if document.versions.last.whodunnit %></td>
	        <td>
	          <%= link_to 'Edit', edit_document_path(document), :class => 'btn btn-mini' %>
	          <%= link_to 'Destroy', document_path(document), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
	        </td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

	<%= link_to 'New', new_document_path, :class => 'btn btn-primary' %>

<% else %>
<div class="index" style="padding-left: 125px;">
<ul class="thumbnails">
  <% @documents.each do |document| %>
  <li class="span3">
    <div class="thumbnail">
      <img src="<%= asset_path('cover.png') %>" alt="">
      <div class="caption">
        <h5 style="min-height: 40px;"><%= document.title %></h5>
        <p>Updated: <%= document.updated_at.to_date.to_s() %><br />-- pages</p>
        <p><%= link_to "View Online", document, :class => 'btn' %> <a class="btn btn-primary disabled">Order Print</a></p>
      </div>
    </div>
  </li>
  <% end %>
<ul>
</div>
<% end %>
