<div class="row">
	<div id="sidebar" class="span3">
		<div id="logo">
			<%= link_to image_tag(asset_path('ccro_long.png'), :width => '100%'), documents_path %>
		</div>
		<br />
			<div class="btn-toolbar">
				<div class="btn-group">        
					<a href="/documents/<%= @document.id %>/edit" class="btn" rel="tooltip" title="Edit Document">
						<i class="icon-pencil"></i>
					</a>
					<a href="/documents/<%= @document.id %>" class="btn" data-confirm="Are you sure?" data-method="delete" rel="nofollow">
						<i class="icon-remove"></i>
					</a>
				</div>
			</div>
	      <ul class="nav nav-tabs nav-stacked">
	        <li class="active"><a href="#">Author <span class="pull-right"><%= @document.owner.name if @document.owner %></span></a></li>
	        <li class="active"><a href="#">Updated Date <span class="pull-right"><%= @document.updated_at.to_date.to_s(:rfc822) %></span></a></li>
	        <li class="active"><a href="">Published 				<span class="btn-group pull-right" style="margin-top: -5px; margin-right: -5px;"> 
					<% if @document.published %>
						<button id="doc-toggle-pub" href="#" class="btn btn-success" rel="tooltip" title="Toggle Published">
							<i class="icon-ok icon-white"></i> Published
						</button>
					<% else %>
						<button id="doc-toggle-pub" href="#" class="btn btn-danger" rel="tooltip" title="Toggle Published">
							<i class="icon-remove icon-white"></i> Not Published
						</button>
					<% end %>
					<button href="#" class="btn" rel="tooltip" title="Set permissions">
						<i class="icon-cog"></i>
					</button>
				</span></a></li>
	        <li class="active"><a href="#">Published Date <span class="pull-right"><%= @document.published_at.to_date.to_s(:rfc822) %></span></a></li>
	      </ul>
		  <% unless params[:view] %>
	      <ul id="sections-nav" class="nav nav-tabs nav-stacked">
	        <li id="control"><a id="toggle-toc" href="#">Table of Contents<i class="icon-chevron-up pull-right"></i></a></li>
	        <%  @document.sections.each do |section| %>
			<li><a href="#<%= section[:title].parameterize %>"><%= section[:title] %></a></li>
			<% end %>
	      </ul>
		  <% end %>
		  <% if params[:id][0] == '5' %>
	      <ul id="doc-views-nav" class="nav nav-tabs nav-stacked">
	        <li id="control"><a id="toggle-views" href="#">Alternate Views<i class="icon-chevron-down pull-right"></i></a></li>
	        <li class="hide"><a href="?#">Clear Alternate View</a></li>
	        <li class="hide"><a href="?view=principal_1">Compare to PJM Principal No. 1</a></li>
	        <li class="hide"><a href="?view=principal_2">Compare to PJM Principal No. 2</a></li>
	        <li class="hide"><a href="?view=principal_3">Compare to PJM Principal No. 3</a></li>
	        <li class="hide"><a href="?view=principal_4">Compare to PJM Principal No. 4</a></li>
	        <li class="hide"><a href="?view=principal_5">Compare to PJM Principal No. 5</a></li>
	        <li class="hide"><a href="?view=principal_6">Compare to PJM Principal No. 6</a></li>
	        <li class="hide"><a href="?view=principal_7">Compare to PJM Principal No. 7</a></li>
	        <li class="hide"><a href="?view=principal_8">Compare to PJM Principal No. 8</a></li>
	      </ul>
		  <% end %>
	    </div>
    <div class="page">
		<%= @document.body.html_safe %>
    </div>
</div>
