<%= form_for @document, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Document</legend>

    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :body, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :body, :class => 'text_area' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :format , :class => 'control-label' %><br />
      <div class="controls">
        <%= f.select :format, options_for_select(FORMATS, @document.format), :include_blank => true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :published_at, :class => 'control-label' %>
      <div class="controls">
        <%= f.datetime_select :published_at, :class => 'datetime_select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', documents_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
