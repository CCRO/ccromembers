<%= form_for [@owner, @document], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Document</legend>

    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :placeholder => 'Title', :class => 'span8 text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :published_at, :class => 'control-label' %>
      <div class="controls">
        <%= date_picker :document, :published_at %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :body, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :body, :placeholder => 'Type your message here...', :class => 'span8 text_area simple_editor' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', documents_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
