    <% if @pages && @pages.length > 0 || @articles && @articles.length > 0 || @messages && @messages.length > 0 || @group_document && @group_document.length > 0 %>
      <div class="well">
        <ul class="nav nav-list">

          <% if @pages && @pages.length > 0 %>
            <li class="nav-header"><%= 'Working Group Pages' %></li>
            <% @pages.each do |p| %>
              
                  <% if @page && p.title == @page.title %>
                    <li style="background-color: #E6E6E6;", class="active"><%= link_to group_page_path(@group, p) do %><%= p.title + " " %><i class="icon-arrow-left"></i></li><% end %>
                  <% else %>
                    <li><%= link_to p.title.html_safe, group_page_path(@group, p) %>
                  <% end %>
              </li>
            <% end %>
          <% end %>

          <% if @group_document && @group_document.length > 0 %>
            <li class="nav-header"><%= 'Working Group Documents' %></li>
            <% @group_document.each do |d| %>
              <li><%= link_to d.title.html_safe, document_path(d) %></li>
            <% end %>
          <% end %>


          <% if false%>
          
            <% if @articles && @articles.length > 0 %>
              <li class="nav-header"> Working Group Articles </li>
              <% @articles.each do |a| %>
                <li><%= link_to a.title.html_safe, polymorphic_path([@group, a]) %></li>
              <% end %>
            <% end %>

          <% end %>
          
          <% if @messages && @messages.length > 0 %>
            <li class="nav-header"> Working Group Discussions </li>
            <% @messages.each do |m| %>

              <% if @message && m.subject == @message.subject %>
                    <li style="background-color: #E6E6E6;", class="active"><%= link_to group_page_path(@group, m) do %><%= m.subject + " " %><i class="icon-arrow-left"></i></li><% end %>
                  <% else %>
                    <li><%= link_to m.subject.html_safe, polymorphic_path([@group, m]) %></li>
              <% end %>
              

            <% end %>
          <% end %>  
        </ul>
      </div>
      <div class="well">
        <%= link_to 'Group News and Updates', group_posts_path(@group), class: 'btn' %>
      </div>
    <% end %>


    <% if @smart_list && @smart_list.length > 0 %>
      <div class="well">
        <ul class="nav nav-list">
          <li class="nav-header"> Working Group Members </li> 
          <% @smart_list.each do |person| %>
            <%= sticker_for person %>
          <% end %>
        </ul>
      </div>
    <% end %>