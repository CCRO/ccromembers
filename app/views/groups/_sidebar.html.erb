<div class="well">

  <div class="accordion" id="accordion1">
    <div class="accordion-group">
      <div class="accordion-heading" style="position: relative;">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#group_phone_info" ><span class="label label-inverse">Conference Line</span> <%= number_to_phone @group.conf_phone %>
        </a>
      </div>
      <div id="group_phone_info" class="accordion-body collapse">
        <div class="accordion-inner">
          <%= current_user.name %>, your personal pin is: <%= current_user.pin_code %>. Your personal pin code is your password for all conference calls. For ease of use you can validate your phone by texting your pin code to 281-815-4177. Once this is done you will no longer be asked for your pin code when calling in on CCRO conferences. 
        </div>
      </div>
    </div>
  </div>

  <ul class="nav nav-list">
    <li class="nav-header"><%= 'Working Group Pages' %></li>
    <% unless @page || @message || params[:controller] == 'posts'|| params[:controller] == 'attachments' %>
      <li style="background-color: #E6E6E6;", class="active"><%= link_to @group do %>Group dashboard <i class="icon-arrow-left"></i></li><% end %>
    <% else %>
      <li><%= link_to "Group dashboard", @group %></li>
    <% end %>

    <% if @pages && @pages.length > 0 %>
      <% @pages.each do |p| %>
          <% if @page && p.title == @page.title %>
            <li style="background-color: #E6E6E6;", class="active"><%= link_to group_page_path(@group, p) do %><%= p.title + " " %><i class="icon-arrow-left"></i></li><% end %>
          <% else %>
            <li><%= link_to p.title.html_safe, group_page_path(@group, p) %>
          <% end %>
        </li>
      <% end %>
    <% end %>

    <% if @articles && @articles.length > 0 %>
      <% if params[:controller] == 'posts' %>
        <li style="background-color: #E6E6E6;", class="active"><%= link_to group_posts_path(@group) do %>News and updates <i class="icon-arrow-left"></i></li><% end %>
      <% else %>
        <li><%= link_to "News and updates", group_posts_path(@group) %></li>
      <% end %>
    <% end %>
  
    <% if @group.attachments && @group.attachments.length > 0 %>
      <% if params[:controller] == 'attachments' %>
        <li style="background-color: #E6E6E6;", class="active"><%= link_to group_attachments_path(@group) do %>File Uploads <i class="icon-arrow-left"></i></li><% end %>
      <% else %>
        <li><%= link_to "File Uploads", group_attachments_path(@group) %></li>
      <% end %>
    <% end %>

    <% if @group_document && @group_document.length > 0 %>
      <li class="nav-header"><%= 'Working Group Documents' %></li>
      <% @group_document.each do |d| %>
        <li><%= link_to d.title.html_safe, document_path(d) %></li>
      <% end %>
    <% end %>

    
    <% if @messages && @messages.length > 0 %>
      <li class="nav-header"> Working Group Discussions </li>
      <% @messages.each do |m| %>
        <% if @message && m.subject == @message.subject %>
          <li style="background-color: #E6E6E6;", class="active"><%= link_to group_message_path(@group, m) do %><%= m.subject + " " %><i class="icon-arrow-left"></i></li><% end %>
        <% else %>
          <li><%= link_to m.subject.html_safe, polymorphic_path([@group, m]) %></li>
        <% end %>
      <% end %>
    <% end %>

  </ul>
</div>