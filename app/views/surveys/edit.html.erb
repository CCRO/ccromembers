<h1><%= @survey.title %></h1>

<br><br>
<div class="well" style="background-color: white;">
<% @survey.questions.each_with_index do |question, index| %>
<table class="table">
  <thead>
    <tr>
      <td>
        <h3><%= (index + 1).to_s + ". " + question.prompt %></h3> 
    </td>
  </tr>
</thead>
<tbody>
  <tr>
    <td>
  <% if question.possible_responses.present? %>
    <% question.possible_responses.each_with_index do |response, index| %>
        <h4><%= (index + 1).to_s + ". " + response %></h4>
    <% end %>
  <% end %>
  </td>
  </tr>
  </tbody>
</table>
  
<br>
<% end %> 
</div>
<%= form_for [@survey, Question.new] do |f| %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td>
        <div class="btn-toolbar pull-right">
          <div class="btn-group">
            <a href="#" class="btn btn-primary"><i class="icon-remove-circle icon-white"></i></a>
            <a href="#" class="btn"><i class="icon-check"></i></a>
            <a href="#" class="btn"><i class="icon-text-height"></i></a>
            <a href="#" class="btn"><i class="icon-align-left"></i></a>
          </div>
          <div class="btn-group">
            <%= f.submit "Save Question", :class => 'btn' %>
          </div>
        </div>
        <h3><%= f.text_field :prompt %><br>
        </h3> 
    </td>
  </tr>
</thead>
<tbody>
  <tr>
    <td>
  </td>
  </tr>
  </tbody>
</table>
<% end %>

<%= link_to "Back to Surveys", surveys_path %>


