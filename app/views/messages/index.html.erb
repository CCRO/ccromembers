<div id="message_content_border">
  <div id="message_content_box">
	  	<% if can? :create, Message %>
			<%= link_to 'Start a new discussion', new_message_path, :class => 'btn pull-right' %>
		<% end %>
		<h1 class="ribbon-left">Discussions</h1>

		<table class="table messages">
			<% @messages.reverse.each do |message| %>
		  <tr>
		    <td>
		  		<strong><%= link_to message.subject, message %></strong> - 
		  		<%= truncate(strip_tags(message.content), :length => 210, :separator => ' ', :omission => '...') %>
			  </td>
		    <td class="span2"><strong><%= message.owner.name %></strong></td>
		    <td class="span2">
				<% if message.comments.count > 0 %>
				<span class="badge badge-inverse pull-right"><%= message.comments.count %></span>
				<% end %>
				<h5 style="color: grey;">
				<% if message.last_activity_time.to_date == Time.now.to_date %>
					<%= l message.last_activity_time, :format => :time %>
				<% else %>
					<%= l message.last_activity_time.to_date, :format => :short %>
				<% end %>
				</h5>
			</td>
		  </tr>
		<% end %>
		</table>

		<br />

	</div>
</div>
	
