<% content_for :adminbar do %>
  <ul>
    <li>
      <%= link_to new_polymorphic_path([@group, Attachment.new]) do %>
        <i class="icon-upload"></i><br><p>Upload File<br>page</p>
      <% end %>
    </li>
    <li>
      <%= link_to report_attachments_path do %>
        <i class="icon-beaker"></i><br><p>Permissions<br>Report</p>
      <% end %>
    </li>
  </ul>
<% end %>



     <div class="row-fluid">
        <div id="content" class="span12" style="padding: 20px;">

            <ul class="breadcrumb pull-left">
              <% if @group %>
              <li>
                <%= link_to @group.name, @group %> <span class="divider">/</span>
              </li>
              <% end %>
              <li class="active">
                <a href="#">File Library</a>
              </li>
            </ul>
    <form action="/search" class="form-search pull-right">
      <input type="text" name="q" class="input-medium search-query" placeholder="<%= params[:q] %>">
      <button type="submit" class="btn">Search</button>
    </form>
<br><br><br>
<table class="table table-striped table-bordered table-condensed">
    <%= render @attachments %>
</table>
<!--Body content-->
</div>
</div>

<script>
$('.levels').tooltip('hide')
</script>


