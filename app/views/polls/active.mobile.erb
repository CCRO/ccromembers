<head>
  <meta http-equiv="refresh" content="10" />
  <%= stylesheet_link_tag "bootstrap_and_overrides" %>
  <%= stylesheet_link_tag "poll" %>
</head>

<% unless @poll %>
  <h1>
    There are no active polls at this time.
  </h1>
<% else %>
  <% if @impression %>
    <h1>
      You have voted in the current poll.
    </h1>
  <% else %>
    <div class="container">
    <div class="span12">   
      <div class="row-fluid">
        <div class="span12">
          <b>Question:</b>
          <%= @poll.question %>
        </div>
      </div>

      <div class="row-fluid">
        <div class="">
          <b>A:</b>
          <%= @poll.choice_a %><br>
          <h1><%= link_to "A", pick_a_poll_path(@poll), class: "btn btn-large btn-info span12", style: "font-size: 60px; height: 180px;" %></h1><br>
        </div>
      </div>

      <div class="row-fluid">
        <div class="">
        <b>B:</b>
        <%= @poll.choice_b %><br>
        <h1><%= link_to "B", pick_b_poll_path(@poll), class: "btn btn-large btn-info span12", style: "font-size: 60px; height: 180px;" %></h1><br>
      </div>
      </div>

      <div class="row-fluid">
        <div class="">
        <b>C:</b>
        <%= @poll.choice_c %><br>
       <h1> <%= link_to "C", pick_c_poll_path(@poll), class: "btn btn-large btn-info span12", style: "font-size: 60px; height: 180px;" %></h1><br>
      </div>
      </div>

      <div class="row-fluid">
        <div class="">
        <b>D:</b>
        <%= @poll.choice_d %><br>
        <h1><%= link_to "D", pick_d_poll_path(@poll), class: "btn btn-large btn-info span12", style: "font-size: 60px; height: 180px;" %></h1><br>
      </div>
      </div>
    </div>  
    </div>  
  <% end %>
<% end %>