<head>
  <meta http-equiv="refresh" content="30" />
  <script>
// When ready...
window.addEventListener("load",function() {
  // Set a timeout...
  setTimeout(function(){
    // Hide the address bar!
    window.scrollTo(0, 1);
  }, 0);
});

$(document).on("click", "a", function( event ){
 
// Stop the default behavior of the browser, which
// is to change the URL of the page.
event.preventDefault();
 
// Manually change the location of the page to stay in
// "Standalone" mode and change the URL at the same time.
location.href = $( event.target ).attr( "href" );
 
}
);
</script>
  <%= stylesheet_link_tag "bootstrap_and_overrides" %>
  <%= stylesheet_link_tag "poll" %>
</head>
<body>
<% unless @poll %>
  <h1>
    There are no active polls at this time.
  </h1>
<% else %>
  <% if @impression %>
    <h1>
      You have voted in the current poll.
    </h1>
  <% else %>
    <div class="container span5" style="line-height: 18px;"> 
      <div class="row">
        <div class="span5">
          </p><b>Question:</b>
          <h2><%= @poll.question %></p></h2>
        </div>
      </div>

      <div class="offset1">
        <div class="row" style="width: 100%;">
            <p><b>A:</b>
            <%= @poll.choice_a %><br>
            <h1><%= link_to "A", pick_a_poll_path(@poll), class: "btn btn-large btn-info", style: " width: 150px;" %></h1></p><br>
        </div>

        <div class="row" style="width: 100%;">
          <p><b>B:</b>
          <%= @poll.choice_b %><br>
          <h1><%= link_to "B", pick_b_poll_path(@poll), class: "btn btn-large btn-info", style: " width: 150px;" %></h1></p><br>
        </div>

        <div class="row" style="width: 100%;">
          <p><b>C:</b>
          <%= @poll.choice_c %><br>
         <h1> <%= link_to "C", pick_c_poll_path(@poll), class: "btn btn-large btn-info", style: " width: 150px;" %></h1></p><br>
        </div>

        <div class="row" style="width: 100%;">
          <p><b>D:</b>
          <%= @poll.choice_d %><br>
          <h1><%= link_to "D", pick_d_poll_path(@poll), class: "btn btn-large btn-info", style: " width: 150px;" %></h1></p><br>
        </div>
      </div>
      <br>
      <br>
      <br><div></div>
    </div>  
  <% end %>
<% end %>
</body>