<h1>
  <%= @polling_session.name %>
  <% if current_user && current_user.admin? %>
  	<%= link_to 'Polling session report', report_polling_session_path(@polling_session), :class => 'btn btn-large' %>
  <% end %>
</h1>

<% if @polls.present? %>
	<%= render @polls %>
<% else %>
	<h1>There are not currently any Polls. </h1><h2>Are you ready to get to work?</h2>
<% end %>

<% if current_user && current_user.admin? %>
	<%= link_to 'New Poll', new_poll_for_session_path(@polling_session) %><br>
	<%= link_to 'All polling sessions', polling_sessions_path %>
<% end %>

<% if false %>
<%= link_to 'Edit', edit_polling_session_path(@polling_session) %> |
<%= link_to 'Back', polling_sessions_path %>
<% end %>