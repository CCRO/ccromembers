<% content_for :adminbar do %>
  <ul>
    <li><%= link_to new_poll_for_session_path(@polling_session) do %><i class="icon-ok-circle"></i><br><p>New Poll</p><% end %></li>
    <li><%= link_to active_polls_path do %><i class="icon-edit"></i><br><p>Active poll</p><% end %></li>
  </ul>
<% end %>


<h1>
  <%= @polling_session.name %>
  <% if current_user && current_user.admin? %>
  	<%= link_to 'Polling session report', report_polling_session_path(@polling_session), :class => 'btn btn-large' %>
  <% end %>
</h1>

<% if @polls.present? %>
	<%= render @polls %>
<% else %>
	<h1>There are not currently any Polls. </h1><h2>Are you ready to get to work?</h2>
<% end %>
<br>
<br>
<% if current_user && current_user.admin? %>
	<%= link_to "New Poll", new_poll_for_session_path(@polling_session), class: "btn btn-large btn-info", style: 'width: 150px; height: 25px;' %><br><br>
	<%= link_to 'All polling sessions', polling_sessions_path %>
<% elsif current_user %>
<%= link_to "Refresh Poll List", polling_session_path(@polling_session), class: "btn btn-large btn-info", style: 'width: 150px; height: 25px;' %>
<% end %>

|| <%= link_to 'Back to CCRO Site', posts_path %>
<% if false %>
<%= link_to 'Edit', edit_polling_session_path(@polling_session) %> |
<%= link_to 'Back', polling_sessions_path %>
<% end %>