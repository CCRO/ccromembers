<% content_for :adminbar do %>
	<ul>
		<li>
      <%= link_to edit_smart_list_path(@smart_list) do %>
      <i class="icon-edit"></i><br><p>Edit List</p>
      <% end %>
    </li>
		<li>
      <%= link_to duplicate_smart_list_path(@smart_list) do %>
