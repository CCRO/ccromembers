  <% if current_user %>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">

        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <!-- Be sure to leave the brand out there if you want it shown -->
        <% if current_user.level == 'basic' %>
          <%= link_to "CCRO", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'pro'%>
          <%= link_to "CCRO Pro", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'participant'%>
         <%= link_to "CCRO Participant", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'committee'%>
         <%= link_to "CCRO Member", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'admin' %>
          <%= link_to posts_path, class: "brand", style: "color: white;" do %>
            <%if current_user.first_name == 'Bob' %>
              CCRO Admin
            <% elsif current_user.first_name == 'Danette' %>
              <span class="icon-heart"> CCRO Admin <span class="icon-heart">
            <% else%>
              <span class="icon-star"> </span> CCRO Admin <span class="icon-star"> </span>
            <% end %>
          <% end %> 
        <% else %>
        <%= link_to "CCRO", posts_path, class: "brand", style: "color: white;" %>
        <% end %>

        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse">
            <ul class="nav">
              <!-- Research Center Dropdown -->
              <li <%= 'class=active' if params[:controller] == 'articles' || params[:controller] == 'groups' || params[:controller] == 'discussions' || params[:controller] == 'documents' || params[:controller] == 'posts' || (params[:controller] == 'reports' && params[:action] == 'dashboard') %>><a href="/documents"><i class="icon-book icon-white"></i> Resource Center</a></li>
              <li><a href="/static/summit"><i class="icon-calendar icon-white"></i> Events</a></li>
              <li <%= 'class=active' if params[:controller] == 'companies' || params[:controller] == 'people' %>><a href="<%= (current_user.admin?) ? '/people' : '/static/comingsoon' %>"><i class="icon-user icon-white"></i> Directory</a></li>
            </ul>
         </div>
        <div class="navbar-text pull-right">
          Logged in as <a data-toggle="modal" href="#modal-current_user"><%= current_user.email %></a>
        </div>

      </div>

    </div>
  </div>
  <%= render 'shared/subnav' %>
<% end %>
