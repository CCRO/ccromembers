  <% @about_pages = Page.where(published: true).tagged_with("about").sort! { |a,b| a.position <=> b.position } %>
  <% if current_user %>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">

        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <!-- Be sure to leave the brand out there if you want it shown -->
        <% if current_user.level == 'basic' %>
          <%= link_to "CCRO", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'pro'%>
          <%= link_to "CCRO Pro", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'participant'%>
         <%= link_to "CCRO Participant", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'committee'%>
         <%= link_to "CCRO Member", posts_path, class: "brand", style: "color: white;" %>
        <% elsif current_user.level == 'admin' %>
          <%= link_to posts_path, class: "brand", style: "color: white;" do %>
            <%if current_user.first_name == 'Bob' %>
              CCRO Admin
            <% elsif current_user.first_name == 'Danette' %>
              <span class="icon-heart"> CCRO Admin <span class="icon-heart">
            <% else%>
              <span class="icon-star"> </span> CCRO Admin <span class="icon-star"> </span>
            <% end %>
          <% end %> 
        <% else %>
        <%= link_to "CCRO", posts_path, class: "brand", style: "color: white;" %>
        <% end %>



        <!-- Everything you want hidden at 940px or less, place within here -->
        <div class="nav-collapse">
            <ul class="nav">
              <!-- Research Center Dropdown -->
              <li <%= 'class=active' if params[:controller] == 'articles' || params[:controller] == 'groups' || params[:controller] == 'discussions' || params[:controller] == 'documents' || params[:controller] == 'groups' || params[:controller] == 'posts' || (params[:controller] == 'reports' && params[:action] == 'dashboard') %>><a href="/pages/23-about-ccro-working-groups"><i class="icon-book icon-white"></i> Resource Center</a></li>
              
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-calendar icon-white"></i></i>Events</i></a>
                <ul class="dropdown-menu">
                    <li style="padding-right:0px;"><%= link_to "Upcoming Events", "/pages/47" %></li>
                    <li style="padding-right:0px;"><%= link_to "Past events", "/pages/22" %></li>
                </ul>
              </li>

              <li <%= 'class=active' if params[:controller] == 'companies' || params[:controller] == 'people' %>><a href="<%= (current_user.admin?) ? '/people' : '/people' %>"><i class="icon-user icon-white"></i> Directory</a></li>
              
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-bullhorn icon-white"></i>About The CCRO</i></a>
                <ul class="dropdown-menu">
                  <% @about_pages.each do |p| %>
                    <li style="padding-right:0px;"><%= link_to p.title, p %></li>
                  <% end %>
                </ul>
              </li>

            </ul>
         </div>
         <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> <%= current_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a data-toggle="modal" href="#modal-current_user">My Profile</a></li>
              <li><a href="#">Dial-in PIN: <strong><%= current_user.pin_code %></strong></a></li>
              <li class="divider"></li>
              <% if current_user.memberships %>
                  <li><a href="#"><strong>Jump to:</strong></a></li>
                <% current_user.memberships.each do |membership| %>
                  <li><%= link_to(membership.group.name, membership.group) if membership.group %></li>
                <% end %>
              <% end %>
            </ul>
          </li>
        </ul>
        <form action="/search" class="navbar-search pull-right">
          <input type="text" class="search-query" name="q" placeholder="Search">
        </form>
        

      </div>

    </div>
  </div>
  <%= render 'shared/subnav' %>
<% end %>
