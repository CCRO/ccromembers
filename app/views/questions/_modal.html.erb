     <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Update question</h3>
      </div>

      <div class="modal-body">
        <%= form_for([@question.survey, @question]) do |q| %>

          <div class="field">
            <%= q.label :prompt %>
            <%= q.text_area :prompt %>
          </div>

          <% if @question.possible_responses.present? %>
            <% @question.possible_responses.each_with_index do |response, index| %>

              <div class="field">
                <%= q.label :possible_responses %>
                <%= q.text_area "possible_responses[#{index}]", value: response[1] %>
              </div>

            <% end %>
          <% end %>


          <div class="actions">
            <%= q.submit "Update", class: "btn" %>
          </div>
        <% end %>
      </div>

      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      </div>