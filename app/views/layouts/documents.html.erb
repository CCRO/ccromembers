      <meta http-equiv="refresh" content="0;URL=/static/noscript" />
  </noscript>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "documents", :media => "all" %>
  
  <%= javascript_include_tag "application" %>
