  </body>
<script>
	$('div.page ol.standard').before('<h4 class="ribbon-right ribbon-info"><i class="icon-info-sign icon-white" style="margin-top: 2px;"></i><span class="ribbon-collapse"> Risk Management Standard</span></h4>')
