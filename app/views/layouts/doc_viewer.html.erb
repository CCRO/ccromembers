  </head>
  <body id="doc_viewer" data-spy="scroll" >

    <div class="container">
              <%= yield %>
    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "mercury" %>
	
